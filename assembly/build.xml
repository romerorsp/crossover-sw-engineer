<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>deliverable</id>
	
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}</directory>
			<includes>
				<include>Readme.txt</include>
				<include>Howto.txt</include>
				<include>Design.doc</include>
			</includes>
			<excludes>
				<exclude>pom.xml</exclude>
				<exclude>**/target/**</exclude>
				<exclude>.classpath</exclude>
				<exclude>.project</exclude>
				<exclude>**/.classpath</exclude>
				<exclude>**/.project</exclude>
				<exclude>**/.settings</exclude>
				<exclude>**/.springBeans</exclude>
				<exclude>**/.settings/**</exclude>
				<exclude>**/.gitkeep</exclude>
				<exclude>.springBeans</exclude>
			</excludes>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/Video</directory>
			<includes>
				<include>**/*.*</include>
				<include>*.*</include>
			</includes>
			<excludes>
				<exclude>**/.gitkeep</exclude>
			</excludes>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/SQL</directory>
			<includes>
				<include>**/*.*</include>
				<include>*.*</include>
			</includes>
			<excludes>
				<exclude>**/.gitkeep</exclude>
			</excludes>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/Deployment</directory>
			<includes>
				<include>**/*.*</include>
				<include>*.*</include>
			</includes>
			<excludes>
				<exclude>**/.gitkeep</exclude>
			</excludes>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/Code</directory>
			<includes>
				<include>test-exam-maker/**</include>
			</includes>
			<excludes>
				<exclude>**/target/**</exclude>
				<exclude>.classpath</exclude>
				<exclude>.project</exclude>
				<exclude>**/.classpath</exclude>
				<exclude>**/.project</exclude>
				<exclude>**/.settings</exclude>
				<exclude>**/.springBeans</exclude>
				<exclude>**/.settings/**</exclude>
				<exclude>.springBeans</exclude>
				<exclude>**/.gitkeep</exclude>
				<exclude>**/bower_components/**</exclude>
				<exclude>pom.xml</exclude>
			</excludes>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
		
		<fileSet>
			<directory>${project.basedir}/Code/test-exam-maker/target/</directory>
			<outputDirectory>${project.basedir}/Deployment</outputDirectory>
			<includes>
				<include>test-exam-maker.jar</include>
			</includes>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
	</fileSets>
</assembly>